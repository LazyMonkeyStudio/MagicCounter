<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+5"
        android:id="@+id/plus5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="plus5OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+4"
        android:id="@+id/plus4"
        android:layout_below="@+id/plus5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="plus4OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3"
        android:id="@+id/plus3"
        android:layout_below="@+id/plus4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="plus3OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2"
        android:id="@+id/plus2"
        android:layout_below="@+id/plus3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="plus2OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:id="@+id/plus1"
        android:layout_below="@+id/plus2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="plus1OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        android:id="@+id/minus1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="minus1OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-2"
        android:id="@+id/minus2"
        android:layout_below="@+id/minus1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="minus2OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-3"
        android:id="@+id/minus3"
        android:layout_below="@+id/minus2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="minus3OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-4"
        android:id="@+id/minus4"
        android:layout_below="@+id/minus3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="minus4OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-5"
        android:id="@+id/minus5"
        android:layout_below="@+id/minus4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="minus5OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reg"
        android:id="@+id/regular"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickReg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poison"
        android:id="@+id/poison"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/regular"
        android:layout_toEndOf="@+id/regular"
        android:onClick="clickPois" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commander"
        android:id="@+id/commander"
        android:layout_alignTop="@+id/poison"
        android:layout_toRightOf="@+id/poison"
        android:layout_toEndOf="@+id/poison"
        android:onClick="clickCommnd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/player1"
        android:onClick="selectPlayer1"
        android:layout_alignBaseline="@+id/plus4"
        android:layout_alignBottom="@+id/plus4"
        android:layout_toLeftOf="@+id/reset"
        android:layout_toStartOf="@+id/reset" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/player2"
        android:onClick="selectPlayer2"
        android:layout_alignBaseline="@+id/player1"
        android:layout_alignBottom="@+id/player1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/player3"
        android:onClick="selectPlayer3"
        android:layout_alignBaseline="@+id/plus2"
        android:layout_alignBottom="@+id/plus2"
        android:layout_toLeftOf="@+id/reset"
        android:layout_toStartOf="@+id/reset" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/player4"
        android:layout_alignBottom="@+id/player3"
        android:layout_alignLeft="@+id/player2"
        android:layout_alignStart="@+id/player2"
        android:onClick="selectPlayer4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/player5"
        android:onClick="selectPlayer5"
        android:layout_alignBaseline="@+id/minus1"
        android:layout_alignBottom="@+id/minus1"
        android:layout_toLeftOf="@+id/reset"
        android:layout_toStartOf="@+id/reset" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:id="@+id/player6"
        android:layout_alignBottom="@+id/player5"
        android:layout_alignLeft="@+id/player4"
        android:layout_alignStart="@+id/player4"
        android:onClick="selectPlayer6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:onClick="resetHPs"
        android:layout_above="@+id/poison"
        android:layout_toLeftOf="@+id/commander"
        android:layout_toStartOf="@+id/commander" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player7"
        android:text="20"
        android:onClick="selectPlayer7"
        android:layout_alignTop="@+id/minus3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player8"
        android:layout_alignBottom="@+id/player7"
        android:layout_alignLeft="@+id/player6"
        android:layout_alignStart="@+id/player6"
        android:text="20"
        android:onClick="selectPlayer8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/plus5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/plus5"
        android:layout_alignLeft="@+id/player2"
        android:layout_alignStart="@+id/player2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_above="@+id/player3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_above="@+id/player4"
        android:layout_alignLeft="@+id/player4"
        android:layout_alignStart="@+id/player4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_alignBottom="@+id/plus1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_alignTop="@+id/editText5"
        android:layout_alignLeft="@+id/player6"
        android:layout_alignStart="@+id/player6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_alignBottom="@+id/minus2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_above="@+id/player8"
        android:layout_alignLeft="@+id/player8"
        android:layout_alignStart="@+id/player8" />

</RelativeLayout>
